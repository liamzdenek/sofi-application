{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sofi-application/experiment-api": [
        "packages/experiment-api/src/index.ts"
      ],
      "@sofi-application/experiment-api/experiment-api": [
        "packages/experiment-api/experiment-api/src/index.ts"
      ],
      "@sofi-application/shared": ["packages/shared/src/index.ts"],
      "@sofi-application/shared/shared": [
        "packages/shared/shared/src/index.ts"
      ],
      "@sofi-application/ui-components": [
        "packages/ui-components/src/index.ts"
      ],
      "@sofi-application/ui-components/ui-components": [
        "packages/ui-components/ui-components/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
